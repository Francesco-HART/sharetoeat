{
    "globalSetup": "<rootDir>/test/setup-integration-test.ts",
    "globalTeardown": "<rootDir>/test/teardown-integration-test.ts",
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "../",
    "testRegex": ".*\\.it-spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/src/",
        "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
        "^@app/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
        "^@app/core/(.*)$": "<rootDir>/libs/core/src/$1",
        "^@app/wallet/(.*)$": "<rootDir>/libs/wallet/src/$1",
        "^@app/marketing-campaign/(.*)$": "<rootDir>/libs/marketing-campaign/src/$1",
        "^@test(|/.*)$": "<rootDir>/test/$1"
    }
}
